rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is a teacher
    function isTeacher() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }
    
    // Helper function to check if user is a student
    function isStudent() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'student';
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if isAuthenticated();
      
      // Users can only create/update their own profile
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      
      // Only admins can delete (not implemented in free tier)
      allow delete: if false;
    }
    
    // Courses collection
    match /courses/{courseId} {
      // Anyone authenticated can read courses
      allow read: if isAuthenticated();
      
      // Only teachers can create/update/delete courses
      allow create, update, delete: if isTeacher();
    }
    
    // Lessons collection
    match /lessons/{lessonId} {
      // Anyone authenticated can read lessons
      allow read: if isAuthenticated();
      
      // Only teachers can create/update/delete lessons
      allow create, update, delete: if isTeacher();
    }
    
    // Assignments collection
    match /assignments/{assignmentId} {
      // Anyone authenticated can read assignments
      allow read: if isAuthenticated();
      
      // Only teachers can create/update/delete assignments
      allow create, update, delete: if isTeacher();
    }
    
    // Exams collection
    match /exams/{examId} {
      // Anyone authenticated can read exams
      allow read: if isAuthenticated();
      
      // Only teachers can create/update/delete exams
      allow create, update, delete: if isTeacher();
    }
    
    // Notes collection (Teacher notes)
    match /notes/{noteId} {
      // Anyone authenticated can read notes (students can see teacher notes)
      allow read: if isAuthenticated();
      
      // Only teachers can create/update/delete notes
      allow create, update, delete: if isTeacher();
    }
    
    // Feedback collection
    match /feedback/{feedbackId} {
      // Users can read their own feedback, teachers can read all
      allow read: if isAuthenticated() && 
                     (isOwner(resource.data.userId) || isTeacher());
      
      // Only students can create feedback
      allow create: if isStudent();
      
      // Users can update their own feedback
      allow update: if isOwner(resource.data.userId);
      
      // Only the owner can delete their feedback
      allow delete: if isOwner(resource.data.userId);
    }
  }
}
