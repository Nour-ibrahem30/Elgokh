{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",

    "progress": {
      "$studentUid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid == $studentUid",
        "$courseId": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $studentUid"
        }
      }
    },

    "notifications": {
      ".read": "auth != null",
      ".write": "auth != null"
    },

    "liveChat": {
      "$courseId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}
