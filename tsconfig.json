{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "outDir": "./public/assets/dist",
    "rootDir": "./public/assets/ts",
    "baseUrl": ".",
    "paths": {
      "@/*": ["public/assets/ts/*"],
      "@utils/*": ["public/assets/ts/utils/*"],
      "@services/*": ["public/assets/ts/services/*"],
      "@components/*": ["public/assets/ts/components/*"],
      "@types/*": ["public/assets/ts/types/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "include": [
    "public/assets/ts/**/*"
  ],
  "exclude": [
    "node_modules",
    "public/assets/dist",
    "coverage",
    "tests"
  ]
}
