rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isTeacher() {
      return isAuthenticated() && 
             firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'teacher';
    }
    
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 5 * 1024 * 1024; // 5MB
    }
    
    function isValidVideo() {
      return request.resource.contentType.matches('video/.*') &&
             request.resource.size < 50 * 1024 * 1024; // 50MB
    }
    
    function isValidPDF() {
      return request.resource.contentType == 'application/pdf' &&
             request.resource.size < 10 * 1024 * 1024; // 10MB
    }
    
    // Videos folder - teacher only upload
    match /videos/{videoId} {
      allow read: if isAuthenticated();
      allow write: if isTeacher() && isValidVideo();
    }
    
    // Attachments/Materials - teacher only upload
    match /attachments/{fileId} {
      allow read: if isAuthenticated();
      allow write: if isTeacher() && isValidPDF();
    }
    
    // User profile images
    match /profiles/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      request.auth.uid == userId && 
                      isValidImage();
    }
  }
}
